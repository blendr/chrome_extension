{
    "manifest_version": 2,

    "name": "Cahoots",
    "description": "A better way to compose email together",
    "version": "1.0",
    // "icons": {
    //     "16": "icon16.png", 
    //     "128": "icon128.png"
    // },

    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*"
            ],
            "css": ["css/style.css"],
            "js": [
                "js/lib/jquery.min.js", 
                "js/main.js"
            ],
            "run_at": "document_end"
        }
    ],

    "permissions": [
        "tabs", 
        "activeTab",
        "https://mail.google.com/*"
    ]
 }
